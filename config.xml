<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ekurhuleni.indigentapp" version="1.11" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Indigent Field Worker App</name>
    <description>
        Indigent Field Worker App
    </description>
    <author email="tsheko.mashego@ekurhuleni.co.za" href="http://www.ekurhuleni.co.za">
        Tsheko Mashego
    </author>
    <content src="index.html" />
    <icon src="res/ekurhuleni.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon/android/Webp.net-resizeimage.png" />
        <icon density="mdpi" src="res/icon/android/Webp.net-resizeimage.png" />
        <icon density="hdpi" src="res/icon/android/Webp.net-resizeimage.png" />
        <icon density="xhdpi" src="res/icon/android/Webp.net-resizeimage.png" />
        <icon density="xxhdpi" src="res/icon/android/Webp.net-resizeimage.png" />
        <icon density="xxxhdpi" src="res/icon/android/Webp.net-resizeimage.png" />
        <splash density="land-hdpi" src="res/screen/android/ekurhuleni-hdpi-landscape.png" />
        <splash density="land-ldpi" src="res/screen/android/ekurhuleni-ldpi-landscapei.png" />
        <splash density="land-mdpi" src="res/screen/android/ekurhuleni-mdpi-landscape.png" />
        <splash density="land-xhdpi" src="res/screen/android/ekurhuleni-xhdpi-landscape.png" />
        <splash density="port-hdpi" src="res/screen/android/ekurhuleni-ldpi-portrait.png" />
        <splash density="port-ldpi" src="res/screen/android/ekurhuleni-hdpi-portrait.png" />
        <splash density="port-mdpi" src="res/screen/android/ekurhuleni-mdpi-portrait.png" />
        <splash density="port-xhdpi" src="res/screen/android/ekurhuleni-xhdpi-portrait.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.3.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-camera" spec="^3.0.0" />
    <plugin name="cordova-plugin-media-capture" spec="^2.0.0" />
    <plugin name="cordova-plugin-geolocation" spec="^3.0.0" />
    <plugin name="cordova-plugin-globalization" spec="1.0.8" />
    <plugin name="cordova-plugin-inappbrowser" spec="1.7.2" />
    <plugin name="cordova-plugin-media" spec="4.0.0" />
    <plugin name="cordova-plugin-network-information" spec="^1.3.4" />
    <plugin name="cordova-plugin-splashscreen" spec="4.1.0" />
    <plugin name="cordova-plugin-vibration" spec="2.1.6" />
    <plugin name="onesignal-cordova-plugin" spec="2.2.4" />
    <plugin name="cordova-sqlite-storage" spec="^2.1.3" />
    <plugin name="cordova-plugin-file-opener2" spec="^2.0.19" />
</widget>
